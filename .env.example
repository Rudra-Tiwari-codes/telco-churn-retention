# Telco Churn Retention Platform - Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env files to source control

# ============================================================================
# Model Configuration
# ============================================================================
MODEL_DIR=models
PREDICTION_THRESHOLD=0.5

# ============================================================================
# Environment
# ============================================================================
# Set to "production" to enable error message sanitization
ENVIRONMENT=development

# ============================================================================
# Logging
# ============================================================================
LOG_LEVEL=INFO

# ============================================================================
# MLflow Tracking
# ============================================================================
# Local file-based tracking (default)
MLFLOW_TRACKING_URI=file:./mlruns
# For remote MLflow server, use:
# MLFLOW_TRACKING_URI=http://mlflow-server:5000
# For Databricks, use:
# MLFLOW_TRACKING_URI=databricks://profile-name

# ============================================================================
# API Configuration
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8000
# For production, restrict to specific origins:
# CORS_ORIGINS=https://example.com,https://app.example.com
# For development, allow all (default):
CORS_ORIGINS=*

# ============================================================================
# Processed Data Directory (for SHAP explanations)
# ============================================================================
# Optional: Explicit path to processed data directory
# If not set, will try to resolve from MODEL_DIR or project structure
# PROCESSED_DATA_DIR=data/processed

# ============================================================================
# Kafka Configuration (Streaming Pipeline)
# ============================================================================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC=customer_events

# ============================================================================
# Redis Configuration (Streaming Pipeline)
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379

# ============================================================================
# Alerting Configuration
# ============================================================================
# Slack webhook URL for alerts (optional)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# SMTP configuration for email alerts (optional)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM_EMAIL=alerts@example.com
# SMTP_TO_EMAILS=admin@example.com,team@example.com
